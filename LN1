  <style>
    body {
      background: #000;
      color: #ff3333;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 24px;
      gap: 20px;
    }
    header { text-align: center; margin-bottom: 12px; }
    .brand { font-size: 24px; font-weight: bold; }
    .card { background: rgba(255,255,255,0.02); padding: 18px; border-radius: 12px; width: 100%; max-width: 800px; }
    h1 { margin-bottom: 12px; }
    .title-row { display: flex; gap: 12px; margin-bottom: 14px; }
    .title-btn { background: transparent; border: 1px solid rgba(255,51,51,0.3); color: #ff3333; padding: 8px 14px; border-radius: 8px; cursor: pointer; }
    .title-btn:hover { background: rgba(255,51,51,0.03); }
    textarea { width: 100%; min-height: 140px; padding: 12px; border-radius: 10px; border: 1px solid rgba(255,51,51,0.15); background: rgba(0,0,0,0.5); color: #ff7777; }
    .post-btn { margin-top: 8px; padding: 10px 16px; border-radius: 10px; border: none; font-weight: bold; background: #ff3333; color: #fff; cursor: pointer; }
    .post-btn:disabled { opacity: 0.5; cursor: not-allowed; }
    .feed { margin-top: 18px; display: flex; flex-direction: column; gap: 12px; }
    .post { padding: 12px; border-radius: 10px; background: rgba(255,255,255,0.02); border: 1px solid rgba(255,51,51,0.06); color: #ffdddd; word-break: break-word; }
    .meta-small { font-size: 12px; opacity: 0.75; margin-bottom: 8px; }
