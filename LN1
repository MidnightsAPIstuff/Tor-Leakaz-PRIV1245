  <header role="banner">
    <div class="brand">Leakaz Official</div>
  </header>

  <main>
    <section class="card" aria-labelledby="leak-title">
      <h1 id="leak-title">Leak Title</h1>

      <div class="title-row" role="toolbar" aria-label="Leak title options">
        <button class="title-btn" data-title="title 1">title 1</button>
        <button class="title-btn" data-title="title 2">title 2</button>
      </div>

      <form id="postForm" class="post-area" onsubmit="return false;">
        <textarea id="postInput"
                  placeholder="Paste the required string exactly to send a global post."
                  aria-describedby="charCount requiredHint"
                  required></textarea>

        <div class="meta">
          <div>
            <div id="charCount" class="char-count" aria-live="polite"></div>
            <div id="requiredHint" class="required-string" aria-hidden="true">
              Required string: ADMIN75098347603460593486904386083934760974308698436734903476809436709436983470698340967340968340967439069043690347690347690834-43780967808043709349809347908439043986349067938408693407684309687430986i4360h34jop43nkbg89430opj43gu9y34u408u6
            </div>
          </div>

          <div style="display:flex; gap:8px; align-items:center;">
            <button type="button" id="pasteSample" class="title-btn" title="Paste the required string">paste required</button>
            <button type="submit" id="postButton" class="post-btn" disabled>Post (global)</button>
          </div>
        </div>
      </form>

      <div id="feedback" role="status" aria-live="assertive" style="margin-top:8px; font-size:13px; opacity:.95"></div>
    </section>

    <section class="card" aria-labelledby="feedTitle" style="margin-top:14px;">
      <h2 id="feedTitle" style="font-size:16px; margin-bottom:10px;">Global Feed</h2>
      <div id="feed" class="feed" aria-live="polite" aria-relevant="additions"></div>
    </section>
  </main>

  <script>
    (function () {
      // EXACT required string you provided:
      const REQUIRED = "ADMIN75098347603460593486904386083934760974308698436734903476809436709436983470698340967340968340967439069043690347690347690834-43780967808043709349809347908439043986349067938408693407684309687430986i4360h34jop43nkbg89430opj43gu9y34u408u6";

      const textarea = document.getElementById('postInput');
      const charCount = document.getElementById('charCount');
      const postButton = document.getElementById('postButton');
      const feed = document.getElementById('feed');
      const feedback = document.getElementById('feedback');
      const pasteSampleBtn = document.getElementById('pasteSample');
      const titleButtons = document.querySelectorAll('.title-btn[data-title]');

      // show current length and expected length
      function updateState() {
        const currentLen = textarea.value.length;
        charCount.textContent = `Current length: ${currentLen} characters â€” required exact string length: ${REQUIRED.length}`;
        // enable only when the textarea exactly matches the required string
        postButton.disabled = textarea.value !== REQUIRED;
      }

      // paste the required string into the textarea
      pasteSampleBtn.addEventListener('click', () => {
        textarea.value = REQUIRED;
        updateState();
        textarea.focus();
      });

      // title buttons set the visible Leak Title
      titleButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          const t = btn.getAttribute('data-title') || 'Leak Title';
          document.getElementById('leak-title').textContent = t;
          feedback.textContent = `Set leak title to "${t}".`;
          setTimeout(() => feedback.textContent = '', 2000);
        });
      });

      textarea.addEventListener('input', updateState);
      window.addEventListener('load', updateState);

      // handle submit: only allowed when exact match (button enabled only then)
      document.getElementById('postForm').addEventListener('submit', (e) => {
        e.preventDefault();
        const text = textarea.value;
        if (text !== REQUIRED) {
          feedback.textContent = 'Post failed: required string does not match exactly.';
          return;
        }

        // create post card and add to feed (simulated)
        const postEl = document.createElement('article');
        postEl.className = 'post';
        const now = new Date();
        const meta = document.createElement('div');
        meta.className = 'meta-small';
        meta.textContent = `Posted ${now.toLocaleString()}`;
        const content = document.createElement('div');
        // show only first/obfuscated content for UI safety; full string shown as provided
        content.textContent = text;

        postEl.appendChild(meta);
        postEl.appendChild(content);
        feed.insertBefore(postEl, feed.firstChild);

        feedback.textContent = 'Global post sent.';
        textarea.value = '';
        updateState();
        setTimeout(() => feedback.textContent = '', 2500);
      });

      // shortcut: Ctrl/Cmd + Enter to submit if match
      textarea.addEventListener('keydown', (ev) => {
        if ((ev.ctrlKey || ev.metaKey) && ev.key === 'Enter') {
          ev.preventDefault();
          document.getElementById('postForm').dispatchEvent(new Event('submit', {cancelable: true}));
        }
      });

      // initial tip
      feedback.textContent = 'Tip: paste the required string exactly or click "paste required".';
      setTimeout(() => feedback.textContent = '', 3500);
    })();
  </script>
